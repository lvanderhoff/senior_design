<h1>Mailing List</h1>

<head>
  	<title><%= title %></title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %> 
    
  </head>
 <body>
    <%= render 'layouts/header' %>
    <div>
	  <center>
		  <% @customers.each do |customer| %>
				  <%= customer.email %>
				  <br>
		  <% end %>
	  </center>
	</div>
	
    <div>
      <%= yield %>
      <%= render 'layouts/footer' %>
    </div>
</body>